---
import AppleIcon from "./icons/Apple.astro";
import SearchIcon from "./icons/Search.astro";
import MarketIcon from "./icons/Market.astro";
import SubNav from "./SubNav.astro";
---

<section class="header">
  <nav class="nav main-nav">
    <AppleIcon class="logo" />
    <ul class="nav-links">
      <li><a href="#">Tienda</a></li>
      <li><a href="#">Mac</a></li>
      <li><a href="#">iPad</a></li>
      <li><a href="#">iPhone</a></li>
      <li><a href="#">Watch</a></li>
      <li><a href="#">AirPods</a></li>
      <li><a href="#">TV y Casa</a></li>
      <li><a href="#">Entretenimiento</a></li>
      <li><a href="#">Accesorios</a></li>
      <li><a href="#">Soporte</a></li>
    </ul>
    <SearchIcon class="icon-right" />
    <MarketIcon class="icon-right" />
  </nav>

  <SubNav />
</section>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  // Timeline para sincronizar ambas animaciones
  const tl = gsap.timeline({
    scrollTrigger: {
      trigger: "body",
      start: "top top",
      end: "+=1000",
      scrub: 0.5,
    },
  });

  // Oculta el main-nav
  tl.to(
    ".main-nav",
    {
      y: "-100%",
    },
    0
  );

  // Sube el subnav al mismo tiempo
  tl.to(
    ".subnav",
    {
      y: "-66px",
      x: "-8px",
      backdropFilter: "blur(20px)",
      borderBottomWidth: 100,
    },
    0
  );

  // Oculta el border-bottom
  tl.to(
    ".subnav-container",
    {
      borderBottomWidth: 0,
    },
    0
  );
</script>

<style>
  .header {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000;
  }

  .nav {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    padding: 0.5rem 2rem;
  }

  .nav-links {
    list-style: none;
    display: flex;
    gap: 1.5rem;
    padding-inline-start: 0;
  }

  .nav-links li a {
    color: #bcbcbc;
    text-decoration: none;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;

    &:hover {
      color: #fff;
    }
  }

  .logo {
    width: 25px;
    height: 30px;
    cursor: pointer;
    fill: #bcbcbc;

    &:hover {
      fill: #fff;
    }
  }

  .icon-right {
    width: 20px;
    height: 50px;
    cursor: pointer;
    fill: #bcbcbc;

    &:hover {
      fill: #fff;
    }
  }
</style>
